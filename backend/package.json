{
  "name": "true-bread-backend",
  "version": "1.0.0",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "npm run clean && tsc",
    "build:prod": "npm run clean && tsc && npm run copy-assets",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "copy-assets": "cp -r src/templates dist/ && mkdir -p logs",
    "test:connection": "ts-node test-mysql-connection.ts",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop true-bread-backend",
    "pm2:restart": "pm2 restart true-bread-backend",
    "pm2:logs": "pm2 logs true-bread-backend"
  },
  "dependencies": {
    "@types/mysql": "^2.15.27",
    "axios": "^1.6.2",
    "canvas": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fs-extra": "^11.1.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.2",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.10.0",
    "pdf-lib": "^1.17.1",
    "pdf-poppler": "^0.2.1",
    "pg": "^8.11.3",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/sharp": "^0.32.0",
    "@types/uuid": "^9.0.7",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
