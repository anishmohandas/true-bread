# Production Environment Configuration for True Bread Backend

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
BASE_URL=https://thetruebread.com
BACKEND_URL=https://thetruebread.com/api
ALLOWED_ORIGINS=https://thetruebread.com,https://www.thetruebread.com

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=thetrueb_truebread_prod
DB_USER=thetrueb_truebread_user
DB_PASSWORD=your_secure_database_password_here

# Email Configuration
EMAIL_HOST=mail.thetruebread.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=info@thetruebread.com
EMAIL_PASSWORD=your_secure_email_password_here

# Contact Email (for contact form submissions)
CONTACT_EMAIL=info@thetruebread.com

# Security (Optional - for enhanced security)
JWT_SECRET=your_jwt_secret_here_if_needed
SESSION_SECRET=your_session_secret_here_if_needed

# File Upload Limits (Optional)
MAX_FILE_SIZE=10485760
MAX_FILES=10

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
